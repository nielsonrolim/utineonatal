<%= render 'hospitalizations/summary', hospitalization: @hospitalization %>

<div class="page-header">
  <h3>Exame Físico</h3>
</div>

<%= simple_form_for @visit,
                    :url => url_for(:action => 'indicators', :controller => 'visits'),
                    :method => 'post',
                    :html => {:class => 'form-horizontal'} do |f| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Dados Antropométricos</h3>
      </div>

      <div class="panel-body">

        <%= f.input :weight %>
        <%= f.input :stature %>
        <%= f.input :head_circumference %>
        <%= f.input :thoracic_perimeter %>
        <%= f.input :waist_circumference %>

        <%= hidden_field_tag :bed_id, @bed_id %>

      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Sinais Vitais</h3>
      </div>

      <div class="panel-body">

        <%= f.input :temperature %>
        <%= f.input :incubator_temperature %>
        <%= f.input :pulse %>
        <%= f.input :heart_rate %>
        <%= f.input :respiratory_rate %>
        <%= f.input :blood_pressure_min %>
        <%= f.input :blood_pressure_max %>

        <%= hidden_field_tag :bed_id, @bed.id %>

      </div>
    </div>

    <%= content_tag :button, type: :submit, name: 'commit', class: 'btn btn-primary' do %>
        Continuar <span class="glyphicon glyphicon-chevron-right"></span>
    <% end %>
    <div class="pull-right">
      <%= link_to(beds_list_path, :class => 'btn btn-default') do %>
          <span class="glyphicon glyphicon-chevron-left"></span> Voltar
      <% end %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  cancel_visit_path, :class => 'btn btn-default' %>
    </div>

<% end %>
