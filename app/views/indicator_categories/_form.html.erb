<%= simple_form_for @indicator_category, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :parent, label: 'Categoria Principal', prompt: "-- Selecione uma categoria --", collection: IndicatorCategory.main_categories %>
  <%= f.input :name %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                indicator_categories_path, :class => 'btn btn-default' %>
<% end %>
