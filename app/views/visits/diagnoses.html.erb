<%= render 'hospitalization', hospitalization: @hospitalization %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Diagnósticos Sugeridos</h3>
  </div>
  <div class="panel-body">
    <%= form_tag(visit_interventions_path(@hospitalization.bed_id), :method => 'post') do %>
        <ul class="list-group">
          <% @diagnoses.each do |diagnosis| %>
              <li class="list-group-item">
                <%= check_box_tag 'diagnoses[]', diagnosis.id %> <%= diagnosis.name %>
              </li>
          <% end %>
        </ul>
        <%= submit_tag 'Salvar Diagnósticos', class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
