<%= simple_form_for @indicator_category, :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.association :parent, label: 'Categoria Principal', prompt: "-- Categoria Principal --", collection: IndicatorCategory.main_categories.where('id != ?', @indicator_category.id) %>
    <%= f.input :name %>
    <%= f.input :exclusive_options %>

    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                indicator_categories_path, :class => 'btn btn-default' %>
<% end %>
