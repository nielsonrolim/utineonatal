<%- model_class = Patient -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_patient_path,
            :class => 'btn btn-primary' %>
<br/>

<%= form_tag(patient_search_path, :method => 'post') do %>
    <p>
      <button type="submit" class="btn btn-default pull-right">
        <span class="glyphicon glyphicon-search"></span> Buscar
      </button>
      <%= text_field_tag 'search', @search, placeholder: 'Nome do Paciente', class: "form-control patient_search_input" %>
    </p>
<% end %>

<%= will_paginate @patients %>

<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:medical_record_number) %></th>
    <th class="hidden-xs"><%= model_class.human_attribute_name(:birthdate) %></th>
    <th class="hidden-xs"><%= model_class.human_attribute_name(:sex) %></th>
    <th class="hidden-xs">Leito</th>
    <th class="acoes"><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.id, patient_path(patient) %></td>
        <td><%= patient.name %></td>
        <td><%= patient.medical_record_number %></td>
        <td class="hidden-xs"><%= patient.birthdate.strftime("%d/%m/%Y") %></td>
        <td class="hidden-xs"><%= patient.sex %></td>
        <td class="hidden-xs">
          <% if patient.current_bed %>
              <%= link_to('Visitar', physical_examination_path(patient.current_bed.number), :class => 'btn btn-default btn-xs') %>
          <% else %>
              -
          <% end %>
        </td>
        <td class="acoes">
          <% unless patient.hospitalizations.empty? %>
              <%= link_to('HistÃ³rico', hospitalizations_path(patient), :class => 'btn btn-default btn-xs') %>
          <% end %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_patient_path(patient), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      patient_path(patient),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @visits %>

<br/>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_patient_path,
            :class => 'btn btn-primary' %>
