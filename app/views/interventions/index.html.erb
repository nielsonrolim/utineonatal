<%- model_class = Intervention -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th class="acoes"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @interventions.each do |intervention| %>
      <tr>
        <td><%= link_to intervention.id, intervention_path(intervention) %></td>
        <td><%= intervention.name %></td>
        <td class="acoes">
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_intervention_path(intervention), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      intervention_path(intervention),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_intervention_path,
            :class => 'btn btn-primary' %>
