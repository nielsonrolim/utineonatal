<%- model_class = Indicator -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @indicator.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:obs_description) %>:</strong></dt>
  <dd><%= @indicator.obs_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:has_obs) %>:</strong></dt>
  <dd><%= @indicator.has_obs %></dd>
  <dt><strong><%= model_class.human_attribute_name(:indicator_category_id) %>:</strong></dt>
  <dd><%= @indicator.indicator_category_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              indicators_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_indicator_path(@indicator), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              indicator_path(@indicator),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
