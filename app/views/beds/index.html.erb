<%- model_class = Bed -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:number) %></th>
    <th>Paciente Atual</th>
    <th class="acoes"><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @beds.each do |bed| %>
      <tr>
        <td><%= link_to bed.number, bed_path(bed) %></td>
        <td><%= (bed.available?) ? 'Disponível' : bed.current_patient.name %></td>
        <td class="acoes">
          <% unless bed.current_patient.nil? %>
              <%= link_to('Visitar', physical_examination_path(bed), :class => 'btn btn-default btn-xs') %>
          <% end %>
          <% unless bed.hospitalizations.empty? %>
              <%= link_to('Histórico', bed_history_path(bed), :class => 'btn btn-default btn-xs') %>
          <% end %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bed_path(bed), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bed_path(bed),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bed_path,
            :class => 'btn btn-primary' %>
